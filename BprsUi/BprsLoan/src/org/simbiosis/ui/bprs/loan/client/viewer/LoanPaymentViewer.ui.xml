<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:org.simbiosis.ui.bprs.loan.client.editor">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel>
			<table class="formTableLayout">
				<tr>
					<td colspan="3" class="formLabel">Data kualitas</td>
				</tr>
				<tr>
					<td class="formLabel">
						Sisa pokok
					</td>
					<td>&nbsp;&nbsp;</td>
					<td>
						<g:Label ui:field="osPrincipal" styleName="formTextlabel" />
					</td>
				</tr>
				<tr>
					<td class="formLabel">
						Sisa margin
					</td>
					<td>&nbsp;&nbsp;</td>
					<td>
						<g:Label ui:field="osMargin" styleName="formTextlabel" />
					</td>
				</tr>
				<tr>
					<td class="formLabel">
						Sisa total
					</td>
					<td>&nbsp;&nbsp;</td>
					<td>
						<g:Label ui:field="osTotal" styleName="formTextlabel" />
					</td>
				</tr>
				<tr>
					<td class="formLabel">
						Kolektibilitas
					</td>
					<td>&nbsp;&nbsp;</td>
					<td>
						<g:Label ui:field="quality" styleName="formTextlabel" />
					</td>
				</tr>
				<!-- 
				<tr>
					<td class="formLabel">
						Nilai tagihan
					</td>
					<td>&nbsp;&nbsp;</td>
					<td>
						<g:Label ui:field="osDueValue" styleName="formTextlabel" />
					</td>
				</tr>
				<tr>
					<td class="formLabel">
						Tagihan
					</td>
					<td>&nbsp;&nbsp;</td>
					<td style="white-space:nowrap">
						<g:Label ui:field="osDueCount" styleName="formTextlabel" /> angsuran
					</td>
				</tr>
				-->
				<tr>
					<td colspan="3" class="formLabel">Data pembayaran angsuran</td>
				</tr>
			</table>
			<g:VerticalPanel width="660px">
				<e:PaymentViewerTable ui:field="loanPayments"
					width="100%" height="300px" />
				<g:FlexTable ui:field='schedFooter' styleName='Global-FlexTable-Footer'
					cellSpacing='0' cellPadding='0' />
			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 