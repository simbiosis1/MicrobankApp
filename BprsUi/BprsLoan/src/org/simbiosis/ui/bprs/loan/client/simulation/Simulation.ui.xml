<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:org.simbiosis.ui.bprs.loan.client.editor"
	xmlns:gr="urn:import:org.kembang.grid.client">
	<g:HTMLPanel>
		<table>
			<tr>
				<td class="formLabel">
					Nama nasabah
				</td>
				<td>&nbsp;&nbsp;</td>
				<td>
					<g:TextBox ui:field="name" styleName="formText" />
				</td>
			</tr>
			<tr>
				<td class="formLabel">
					Pokok
				</td>
				<td>&nbsp;&nbsp;</td>
				<td>
					<g:TextBox ui:field="strPrincipal" styleName="formText" />
				</td>
			</tr>
			<tr>
				<td class="formLabel">
					Rate
				</td>
				<td>&nbsp;&nbsp;</td>
				<td>
					<g:HorizontalPanel>
						<g:TextBox ui:field="strRate" width="50px" styleName="formText" />
						<g:HTML styleName="formTextLabel">&nbsp;&nbsp;%pa</g:HTML>
					</g:HorizontalPanel>
				</td>
			</tr>
			<tr>
				<td class="formLabel">
					Jangka waktu
				</td>
				<td>&nbsp;&nbsp;</td>
				<td>
					<g:HorizontalPanel>
						<g:TextBox ui:field="strTenor" width="50px" styleName="formText" />
						<g:HTML styleName="formTextLabel">&nbsp;&nbsp;bulan</g:HTML>
					</g:HorizontalPanel>
				</td>
			</tr>
			<tr>
				<td class="formLabel">
					Model angsuran
				</td>
				<td>&nbsp;&nbsp;</td>
				<td>
					<e:LoanScheduleType ui:field="scheduleType"
						styleName="formCombobox" />
				</td>
			</tr>
			<tr>
				<td colspan="3">&nbsp;</td>
			</tr>
			<tr>
				<td class="formLabel">Data angsuran</td>
				<td>&nbsp;&nbsp;</td>
				<td>
					<g:Button ui:field="btnGenerate" styleName="formButton">Generate</g:Button>
				</td>
			</tr>
			<tr>
				<td colspan="3">
					<g:VerticalPanel width="650px" styleName='Global-FlexTable-Outer'>
						<e:LoanScheduleViewerTable
							ui:field="schedules" width="100%" height="300px" />
						<g:FlexTable ui:field='schedFooter' styleName='Global-FlexTable-Footer'
							cellSpacing='0' cellPadding='0' />
					</g:VerticalPanel>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 